<form class="{{cssClass}} flexcol" autocomplete="off">
    {{#if isVideo}}
        <video
            {{#if autoplay}}autoplay{{/if}}
            {{#if isLoop}}loop{{/if}}
            {{#if isMuted}}muted{{/if}}
            {{#if controls}}controls{{/if}}
            style="width: 100%">
            <source src="{{video}}" type="{{videoType}}">
        </video>
    {{else}}
        <figure class="flexcol">
            <img src="{{image}}" {{#if showTitle}}alt="{{title}}"{{/if}}/>
        </figure>
    {{/if}}
</form>